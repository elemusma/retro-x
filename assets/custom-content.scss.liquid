.content-area img {
    max-height: 650px;
}
.bg-top {
    position: absolute;
    top: 0;
    right:0;
    bottom:0;
    left: -10%;
    width: 110%;
    background: #a6a6a6;
    mix-blend-mode: multiply;
    z-index:1;
}
.left .bg-top {
    left:0;
}
.top .text {
    position: relative;
    z-index: 1;
    color: white;
}
.right .smaller-text {
    border-left: 15px solid #231f20;
}
.left .smaller-text {
    border-right: 15px solid #231f20;
}
.smaller-text .bg-top {
    background:#cccccc;
    width:100%;
    left:0;
}
.featured-text {
    color: white;
    font-size: 1.1rem;
    font-weight: 200;
    padding: 9px 0;
}
@media screen and (max-width:767px){
    .bg-top {
        width: 100%;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
    }
}