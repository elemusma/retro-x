.bottom-gallery img {
    height:400px;
    object-fit:cover;
}
.video-content h3 {
    position:absolute;
    top:50%;
    width:100%;
    background:rgba(0, 0, 0, .5);
    padding:9px;
}
footer ul.nav-titles li a {
    color:#818181;
    border:none;
    text-transform:uppercase;
    margin-right:18px;
}
footer ul.nav-titles li {
    list-style:initial;
    color:#818181;
}
footer ul.nav-titles li:first-child {
    list-style: none;
}
ul.nav-titles.legal-pages {
    padding-top: 18px;
}
footer .legal-pages li {
    list-style: none !important;
}
footer .legal-pages a {
    text-transform: inherit !important;
    margin: 0 !important;
    font-size: 0.75rem !important;
}
footer ul.nav-titles {
    justify-content: center;
}
@media screen and (max-width:767px){
    .video-content h3 {
        top: 0;
        font-size: 2rem;
        position: relative;
        background: none;
    }
}