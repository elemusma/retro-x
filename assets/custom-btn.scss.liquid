a.btn.primary, input.btn, button.btn-main {
    border:3px solid;
    border-radius:25px;
    padding:7.5px 40px;
    color:white;
    font-size:0.8rem;
    text-transform:uppercase;
    white-space:pre-line;
    min-width:250px;
    transition:all 0.3s ease-in-out;
}
button.btn-main{
    background:black;
    border-color:black;
}
a.btn.primary:hover, input.btn:hover, button.btn-main:hover {
    background:black;
    border-color:black;
}