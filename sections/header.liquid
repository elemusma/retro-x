<header>
    <div class="bg-dark">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center text-white p-1">
                    <h6 class="text-uppercase m-0 myriad ls-0">Free Shipping in the US</h6>
                </div>
            </div>
        </div>
    </div>
    <nav style="background:url({{ 'image-nav-background.jpg' | asset_url }});">
        <div class="container">
            <div class="row align-items-center nav-row">
                <div class="col-lg-3 logo-col">
                    <a href="/">
                        <img src="{{ 'image-retrox-logo.png' | asset_url }}" alt="" width="75%"
                            class="mr-auto ml-auto" />
                    </a>
                </div>
                <div class="col-lg-6 col-4 text-center">
                    <!-- nav toggler -->
                    <a id="navToggle" class="nav-toggle">
                        <div class="ml-auto mr-auto">
                            <div class="line-1"></div>
                            <div class="line-2"></div>
                            <div class="line-3"></div>
                        </div>
                    </a>
                    <ul class="nav-titles">
                        <div class="nav-titles-height">

                            {% assign menu_handle = 'main-menu' %}
                            {% if customer %}
                            {% if customer.tags contains 'wholesale' %}
                            {% assign menu_handle = 'main-menu-wholesale' %}
                            {% endif %}
                            {% endif %}
                            {% for link in linklists[menu_handle].links %}
                            {% if link.links == blank %}
                            <li><a href="{{ link.url }}" class="aspira-light">{{ link.title }}</a></li>
                            {% endif %}
                            <!-- start of dropdown menu -->
                            {% if link.links != blank %}
                            <li class="menu-item-has-children"><a href="{{ link.url }}" class="aspira-light">{{
                                    link.title }} <i class="fa fa-sort-down ml-2 mt-1"
                                        style="vertical-align:top;"></i></a>
                                <div class="child-container">
                                    <ul class="child">
                                        {% for child_link in link.links %}
                                        <li><a href="{{ child_link.url }}"
                                                class="aspira-light {% if link.active %}current child-link{% endif %}">{{
                                                child_link.title }}</a>
                                            {% if child_link.links != blank %}
                                            <ul class="grandchild">
                                                {% for grandchild_link in child_link.links %}
                                                <li><a href="{{ grandchild_link.url }}" class="aspira-light">{{
                                                        grandchild_link.title }}</a></li>
                                                {% endfor %}
                                            </ul>
                                            {% endif %}
                                        </li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                            {% endif %}
                            <!-- end of dropdown menu -->
                            {% endfor %}
                            <li><a href="/pages/free-bracelet" class="aspira-light current">Get 15% Off</a></li>
                        </div>
                    </ul>


                </div>
                <div class="col-lg-3 col-8 text-right">
                    <a href="tel:+1719-505-5891" class="e-commerce-icons ml-1 mr-1 phone">719-505-5891</a>
                  <div class="d-flex justify-content-end">
                    <a href="/account" class="e-commerce-icons ml-1 mr-1">
                        <i class="fa fa-user"></i>
                    </a>
                    <!-- <a href="/search" class="e-commerce-icons ml-1 mr-1">
<i class="fa fa-search"></i>
</a> -->
                    <a href="/cart" class="e-commerce-icons ml-1 mr-1">
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                  <a href="mailto:info@retroxco.com" target="_blank" style="letter-spacing:0;color:beige;" class="ml-2">info@retroxco.com</a>
                  </div>
                    <!-- {% include 'si' %} -->
                </div>
            </div>
            <!-- end of row -->
        </div>
        <!-- end of container -->
    </nav>
    <div class="bg-dark bg-border"></div>
</header>